<div class="container-fluid">
    <br>
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h1>Cadastro de Produtos</h1>
        <form action="/api/produto" method="POST">
            <div class="form-group">
                <label for="nome">Produto</label>
                <input type="text" name="nome" class="form-control" placeholder="Digite o nome do produto">
            </div>
            <div class="form-group">
                <label for="descricao">Descrição</label>
                <input type="text" name="descricao" class="form-control" placeholder="Descreva o produto">
            </div>
            <div class="form-group">
                <label for="preco">Preço</label>
                <input type="text" name="preco" class="form-control" placeholder="R$">
            </div>
            <div class="form-group">
                <label for="foto">Foto</label>
                <input type="text" name="foto" class="form-control">
            </div>
            <div class="form-group">
                <label for="ativo">Ativo</label>
                <input type="text" name="ativo" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Cadastrar produto</button>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>