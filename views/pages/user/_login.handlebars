<!-- Login -->
<section class="container-fluid">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            {{#if error}}
                <div class="alert alert-danger">
                    {{error}}
                </div>
            {{/if}}

            {{#if success}}
                <div class="alert alert-success">
                    {{success}}
                </div>
            {{/if}}
            <form action="/api/usuario/login" method="POST">
                <div class="form-group">
                    <i class="fa fa-user"></i>
                    <label for="email">Usu√°rio</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Entre com seu email">
                </div>
                <div class="form-group">
                    <i class="fa fa-key"></i>
                    <label for="senha">Senha</label>
                    <input type="password" class="form-control" name="senha" id="senha" placeholder="Entre com sua senha">
                </div>
                {{#if token}}
                    <input type="hidden" name="_token" value="{{token}}">
                {{/if}}
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</section>