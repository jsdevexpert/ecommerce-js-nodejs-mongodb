<br><br><br>
<div class="container">
    <div class="table-responsive">
        <h2>Listagem de Usuários</h2> <br>
        <table class="table table-striped table-bordered table-hover table-sm">
            <caption>Listagem de Usuários</caption>
                <thead class="thead-ligth">
                    <tr>
                        <!-- <th>ID</th> -->
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Editar</th>
                        <th>Excluir</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each user}}
                        <tr>
                            <!-- <th>{{_id}}</th> -->
                            <th>{{nome}}</th>
                            <th>{{email}}</th>
                            <td>
                                <a href="/api/usuario/edit/{{_id}}">
                                    <button class="btn btn-success">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                            <td>
                                <a href="/api/usuario/delete/{{_id}}">
                                    <button class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    {{else}}
                        <tr>
                            <th>Nenhum usuário encontrado</th>
                        </tr>
                    {{/each}}
                </tbody>
        </table>
    </div>
</div>