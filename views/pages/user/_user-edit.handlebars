<section class="container-fluid">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            {{#if error}}
                <div class="alert alert-danger">
                    {{error}}
                </div>
            {{/if}}

            {{#if success}}
                <div class="alert alert-success">
                    {{success}}
                </div>
            {{/if}}

            <form action="/api/usuario" method="POST">
                <div class="form-group">
                    <i class="fa fa-user"></i>
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" name="nome" id="nome" placeholder="Digite seu nome" value="{{user.nome}}">
                </div>
                <div class="form-group">
                    <i class="fa fa-mail-bulk"></i>
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Digite um email" value="{{user.email}}">
                </div>
                <button type="submit" class="btn btn-primary">Atualizar dados</button>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</section>